{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023", "DOM"],
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true
  },
  "files": [],
  "include": ["src/**/*"],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.snap",
    "node_modules",
    "dist",
    "tsup.config.ts"
  ]
}
