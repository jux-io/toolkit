{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "jsx": "react-jsx",
    "types": ["node"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true
  },
  "files": [],
  "include": ["src/**/*"],
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts", "**/*.snap", "node_modules", "dist", "tsup.config.ts"]
}
